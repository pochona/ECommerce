<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>WebServices.ClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuiviCommandeServlet</servlet-name>
        <servlet-class>WebServices.SuiviCommandeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationBancaireServlet</servlet-name>
        <servlet-class>WebServices.VerificationBancaireServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasserCommandeServlet</servlet-name>
        <servlet-class>WebServices.PasserCommandeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthentificationServlet</servlet-name>
        <servlet-class>WebServices.AuthentificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthentificationBanqueServlet</servlet-name>
        <servlet-class>WebServices.AuthentificationBanqueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MagasinServlet</servlet-name>
        <servlet-class>WebServices.MagasinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PanierServlet</servlet-name>
        <servlet-class>WebServices.PanierServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompteBanqueServlet</servlet-name>
        <servlet-class>WebServices.CompteBanqueServlet</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/ClientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthentificationServlet</servlet-name>
        <url-pattern>/AuthentificationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthentificationBanqueServlet</servlet-name>
        <url-pattern>/AuthentificationBanqueServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MagasinServlet</servlet-name>
        <url-pattern>/MagasinServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PanierServlet</servlet-name>
        <url-pattern>/PanierServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuiviCommandeServlet</servlet-name>
        <url-pattern>/SuiviCommandeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasserCommandeServlet</servlet-name>
        <url-pattern>/PasserCommandeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationBancaireServlet</servlet-name>
        <url-pattern>/VerificationBancaireServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompteBanqueServlet</servlet-name>
        <url-pattern>/CompteBanqueServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
